<% if content.present? %>
  <% if title_key.present? %>
    <h2><%= t("details.section_titles.#{title_key}") %></h2>
  <% end %>

  <dl class="ndl-details">
    <% content.each do |method, content| %>
      <dt class="ndl-detail-label ndl-detail-label-<%= method %>"><%= @record.t("#{method}") %></dt>
      <dd class="ndl-detail-content ndl-detail-content-<%= method %>"><%= content %></dd>
    <% end %>
  </dl>

<% end %>
